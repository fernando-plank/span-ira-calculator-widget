{
  "compilerOptions": {
    "baseUrl": "./src/",
    "target": "es6",
    "lib": ["dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": false,
    "paths": {
      "@components/*": ["./components/*"],
      "@utils/*": ["./utils/*"],
      "@common/*": ["./common/*"],
      "@services/*": ["./services/*"],
      "@models/*": ["./models/*"],
      "@mock/*": ["./mock/*"],
      "@assets/*": ["./assets/*"],
      "@types/*": ["./types/*"],
      "@styles/*": ["./styles/*"],
      "@pages/*": ["./pages/*"],
    },
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "storybook-static", "**/test.tsx", "**/**.test.ts", "**/*.spec.ts", "cypress/**/*", "./cypress.config.ts"],
  "types": ["node", "jest", "@testing-library/jest-dom"]
}
